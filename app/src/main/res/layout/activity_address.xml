<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".AddressActivity">


    <EditText
        android:id="@+id/addre_edtext1"
        android:hint="地址"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="50dp"/>



    <EditText
        android:id="@+id/addre_edtext2"
        android:hint="收货人"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/addre_edtext1"
        android:layout_marginTop="30dp"/>



    <EditText
        android:id="@+id/addre_edtext3"
        android:hint="电话"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/addre_edtext2"
        android:layout_marginTop="30dp"/>
    <Button
        android:id="@+id/button_address"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="50dp"
        app:layout_constraintTop_toBottomOf="@id/addre_edtext3"
        android:background="@drawable/shape"
        android:text="保存"/>
</androidx.constraintlayout.widget.ConstraintLayout>